<%= form_for invite do |f| %>
  <div>
    <%= f.collection_select(:site_id, current_user.sites, :id, :name) %>
  </div>

  <div>
    <%= f.text_field :email, placeholder: "Email" %>
  </div>

  <%= f.hidden_field :user_id, value: current_user.id %>

  <div>
    <%= f.submit 'Send Invite', class: "button button-primary" %>
  </div>
<% end %>
