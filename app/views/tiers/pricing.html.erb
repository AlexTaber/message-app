<% title "Pricing" %>
<% meta_description "Evia's pricing model is scaled to your needs. Sign up for free." %>

<%= render partial: 'layouts/header', locals: { transitioned: true } %>

<div id="scroll-div" style="overflow: scroll; width: 100%; height: 100%;">

    <%= link_to new_user_path, id: "pricing-button" do %>
      <p><small>Get More Done</small></p>
      <p>Sign Up</p>
    <% end %>

  <div class="pricing-featured">
    <div class="pricing-featured_text text-center">
      <div class="container">
      <h1><span class="evia-font">Evia</span> is Scaled to Your Needs</h1>
      <hr class="fifty white show-desktop">
        <div class="row show-desktop">
          <div class="four columns">
            <h1><span class="evia-font">Evia</span> <b>Personal</b></h1>
            <h2 class="enterprise-large-text"><b>Free</b></h2>
            <h4>3 Projects</h4>
            <h4>3 Users <small>(Per Project)</small></h4>
            <h4>$0.00/Month</h4>
          </div>

          <div class="four columns">
            <h1><span class="evia-font">Evia</span> <b>Pro</b></h1>
            <h2 class="pro-large-text"><b>20/20</b></h2>
            <h4>20 Projects</h4>
            <h4>20 Users <small>(Per Project)</small></h4>
            <h4>$4.99/Month</h4>
          </div>

          <div class="four columns">
            <h1><span class="evia-font">Evia</span> <b>Enterprise</b></h1>
            <h2 class="enterprise-large-text"><b>Unlimited</b></h2>
            <h4>Unlimited Projects</h4>
            <h4>Unlimited Users <small>(Per Project)</small></h4>
            <h4>$14.99/Month</h4>
          </div>
        </div>
      </div>
    </div>
  </div>
  <section class="pricing-pitch">
    <div class="text-center">
      <h2><span class="evia-font">Evia</span> Keeps Everything in One Place</h2>
      <hr class="fifty">
    </div>
    <div class="container">
      <div class="row">
        <div class="five offset-by-one columns text-center transitionable" id="transition-0">
          <i class="fa fa-cogs fa-4x" aria-hidden="true"></i>
          <p>&nbsp;</p>
          <h3><b>Your Projects</b></h3>
          <p>You can create up to three projects for free! If you need more, you can upgrade at any time! Remember, any project you are part of and did not create does not count against your created projects total.</p>
        </div>

        <div class="five columns text-center transitionable" id="transition-1">
          <i class="fa fa-users fa-4x" aria-hidden="true"></i>
          <p>&nbsp;</p>
          <h3><b>Your Teams</b></h3>
          <p>You can add up to 3 users to any project you've created, all for free! Be it your clients, a coworker, or your best friend - anyone can be invited to your project. If you need to add more, you can upgrade at any time! </p>
        </div>
      </div>
    </div>
  </section>
  <section class="pricing-details gradient-background">
    <div class="container">
      <div class="row">
        <div class="four columns white-background">
          <h4 class="text-center"><b><span class="evia-font">Evia</span> Personal</b></h4>
          <hr>
          <p class="text-center"><b>Free</b></p>
          <ul>
            <li><b>3</b> Projects</li>
            <li><b>3</b> Users per Project</li>
            <li>Limited file sharing</li>
            <li>Support</li>
          </ul>
        </div>
        <div class="four columns white-background">
          <h4 class="text-center"><b><span class="evia-font">Evia</span> Pro</b></h4>
          <hr>
          <p class="text-center"><b>$4.99/month <small>(Introductory Rate)</small></b></p>
          <ul>
            <li><b>20</b> Projects</li>
            <li><b>20</b> Users per Project</li>
            <li><b>Unlimited</b> file sharing</li>
            <li>Priority Support</li>
          </ul>
        </div>
        <div class="four columns white-background">
          <h4 class="text-center"><b><span class="evia-font">Evia</span> Enterprise</b></h4>
          <hr>
          <p class="text-center"><b>$14.99/month <small>(Introductory Rate)</small></b></p>
          <ul>
            <li><b>Unlimited</b> Projects</li>
            <li><b>Unlimited</b> Users per Project</li>
            <li><b>Unlimited</b> file sharing</li>
            <li>Priority Support</li>
          </ul>
        </div>
      </div>
      <div class="text-center top-50">
        <% if current_user %>
          <%= link_to "Upgrade Today", edit_subscription_path(current_user.subscription), class: "button button-primary" %>
        <% else %>
          <%= link_to "Get More Done Today", new_user_path, class: "button button-primary" %>
        <% end %>
      </div>
    </div>
  </section>

  <section id="support-info">
   <div class="container">
     <div class="row">
       <div class="ten offset-by-one columns text-center">
         <h1 class="splash-header">Have Questions?</h1>
         <h3>Our team will be happy to assist you. </h3>
         <a href="mailto:admin@eviaonline.io">Send us an email</a>
         <p>&nbsp;</p>
         <p>&nbsp;</p>
       </div>
     </div>
   </div>
  </section>

  <%= render partial: "layouts/footer" %>

  </div>
</div>
</div>