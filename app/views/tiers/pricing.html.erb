<div class="scroll-div" style="height:100%; width:100%; overflow: scroll;">
  <%= render partial: 'layouts/header', locals: { transitioned: true } %>

  <% if current_user %>
	  <%= link_to edit_subscription_path(current_user.subscription), id: "pricing-button" do %>
	  	<p><small>Get More Done</small></p>
	  	<p>Upgrade Today</p>
	  <% end %>
	 <% else %>
	 	<%= link_to new_user_path, id: "pricing-button" do %>
	 		<p><small>Get More Done</small></p>
	 		<p>Sign Up</p>
	 	<% end %>
	 <% end %>

	<div class="pricing-featured">
		<div class="pricing-featured_text text-center">
			<div class="container">
			<h1>Upgrade to Get The Most Out of <b>MercuryApp</b></h1>
			<hr class="fifty white show-desktop">
				<div class="row show-desktop">
					<div class="six columns">
					<h1>MercuryApp <b>Pro</b></h1>
						<h2 class="pro-large-text"><b>20/20</b></h1>
						<h4>20 Projects - 20 Users.</h4>
						<h4>$4.99 <small>(Introductory Rate)</small></h4>
					</div>
					<div class="six columns">
					<h1>MercuryApp <b>Enterprise</b></h1>
						<h2 class="enterprise-large-text"><b>Unlimited</b></h1>
						<h4>Unlimited Projects - Unlimited Users.</h4>
						<h4>$14.99 <small>(Introductory Rate)</small></h4>
					</div>
				</div>
			</div>
		</div>
	</div>
	<section class="pricing-pitch">
		<div class="text-center">
			<h2>Get More Out Of What You Already Love</h2>
			<h3>And Help MercuryApp Grow for the Future</h3>
			<hr class="fifty">
		</div>
		<div class="container">
			<div class="row">
				<div class="four columns text-center">
					<i class="fa fa-cogs fa-4x" aria-hidden="true"></i>
					<p>&nbsp;</p>
					<h4><b>More Projects</b></h4>
					<p>Get more projects to better organize your groups. With all of those projects you'll be able to create more specific conversations and tasks.</p>
				</div>
				<div class="four columns text-center">
					<i class="fa fa-users fa-4x" aria-hidden="true"></i>
					<p>&nbsp;</p>
					<h4><b>More Users per Project</b></h4>
					<p>Upgrade your MercuryApp accout to get more users per project. That way you can invite the whole team to communicate with and get tasks done quicker!</p>
				</div>
				<div class="four columns text-center">
					<i class="fa fa-file-text fa-4x" aria-hidden="true"></i>
					<p>&nbsp;</p>
					<h4><b>More File Sharing</b></h4>
					<p>With no limits on file sharing, you can keep all of your messaging about specific files in one place. More file sharing means everyone can stay on the same page. <small>(Coming Soon)</small></p>
				</div>
			</div>
		</div>
	</section>
	<section class="pricing-details">
		<div class="container">
			<div class="row">
				<div class="four columns white-background">
					<h4 class="text-center"><b>MercuryApp Basic</b></h4>
					<hr>
					<p class="text-center"><b>Free</b></p>
					<ul>
						<li><b>3</b> Projects</li>
						<li><b>3</b> Users per Project</li>
						<li>Limited file sharing <small>(Coming Soon)</small></li>
						<li>Support</li>
					</ul>
				</div>
				<div class="four columns white-background">
					<h4 class="text-center"><b>MercuryApp Pro</b></h4>
					<hr>
					<p class="text-center"><b>$4.99/month <small>(Introductory Rate)</small></b></p>
					<ul>
						<li><b>20</b> Projects</li>
						<li><b>20</b> Users per Project</li>
						<li><b>Unlimited</b> file sharing <small>(Coming Soon)</small></li>
						<li>Priority Support</li>
					</ul>
				</div>
				<div class="four columns white-background">
					<h4 class="text-center"><b>MercuryApp Enterprise</b></h4>
					<hr>
					<p class="text-center"><b>$14.99/month <small>(Introductory Rate)</small></b></p>
					<ul>
						<li><b>Unlimited</b> Projects</li>
						<li><b>Unlimited</b> Users per Project</li>
						<li><b>Unlimited</b> file sharing <small>(Coming Soon)</small></li>
						<li>Prioity Support</li>
					</ul>
				</div>
			</div>
			<div class="text-center">
				<% if current_user %>
					<%= link_to "Get More Done Today", edit_subscription_path(current_user.subscription), class: "button button-primary" %>
				<% else %>
					<%= link_to "Get More Done Today", new_user_path, class: "button button-primary" %>
				<% end %>
			</div>
		</div>
	</section>

  <section id="support-info">
   <div class="container">
     <div class="row">
       <div class="ten offset-by-one columns text-center">
         <h1 class="splash-header">Have Questions?</h1>
         <h3>Our team will be happy to assist you. </h3>
         <a href="mailto:admin@mercuryapp.co">Send us an email</a>
         <p>&nbsp;</p>
         <p>&nbsp;</p>
       </div>
     </div>
   </div>
  </section>

  <footer class="copyright-footer">
    <div class="container">
     <div class="row">
      <p class="text-center">Copyright 2016 | Mercury Messenger App</p>
    </div><!--row-->
  </div>
  </footer>
  </div>
</div>
</div>