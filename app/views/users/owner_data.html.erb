
<section class="owner-data">
  <div class="container">
    <div class="row">
      <div class="twelve columns">
        <div class="table-wrapper">
          <h4>Users</h4>
          <table>
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Username</th>
                <th>Email</th>
                <th>Active Sites</th>
                <th>Admin Sites</th>
                <th>Total Conversations</th>
                <th>Total Messages</th>
                <th>Total Visits</th>
                <th>Tier</th>
                <th>Banned?</th>
              </tr>
            </thead>
            <tbody>
              <% User.all.each do |user| %>
                <tr>
                  <td><%= user.id %></td>
                  <td><%= link_to user.name, user_owner_data_user_path(user) %></td>
                  <td><%= user.username %></td>
                  <td><%= user.email %></td>
                  <td><%= user.active_sites.count %></td>
                  <td><%= user.active_admin_sites.count %></td>
                  <td><%= user.conversations.count %></td>
                  <td><%= user.messages.count %></td>
                  <td><%= user.visits %></td>
                  <td><%= user.tier.name %></td>
                  <td>
                    <%= user.is_banned? %>
                    <% if user.is_banned? %>
                      <%= link_to "Remove Ban", ban_path(user.current_ban, ban: { user_id: user.id, active: false }), method: "PUT" %>
                    <% else %>
                      <%= link_to "Ban", new_ban_path(user_id: user.id) %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <div class="table-wrapper">
          <h4>Sites</h4>
          <table>
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Url</th>
                <th>Token</th>
                <th>Active?</th>
              </tr>
            </thead>
            <% Site.all.each do |site| %>
              <tr>
                <td><%= site.id %></td>
                <td><%= link_to site.name, site_owner_data_site_path(site) %></td>
                <td><%= site.url %></td>
                <td><%= site.token %></td>
                <td><%= site.active %></td>
              </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>