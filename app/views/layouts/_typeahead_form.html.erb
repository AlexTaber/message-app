<%= form_tag add_user_path(tasks: tasks), class: 'typeahead-form u-pull-right add-users-typeahead' do %>
<% if @conversation.new_record? %>
  	<%= text_field_tag :user_name, nil, class: "typeahead app-view-typeahead convo-typeahead add-focus new-focus", value: "", placeholder: "Add User to Conversation" %>
<% else %>
		<%= text_field_tag :user_name, nil, class: "typeahead app-view-typeahead convo-typeahead add-focus", value: "", placeholder: "Add User to Conversation" %>
<% end %>

  <%= hidden_field_tag "conversation[project_id]", project.id %>
  <%= hidden_field_tag :user_id, nil %>
  <%= hidden_field_tag :token, token %>

  <% conversation.user_ids.each do |user_id| %>
    <%= hidden_field_tag "user_ids[]", user_id %>
  <% end %>
<% end %>