<%= form_tag add_user_path, class: 'typeahead-form' do %>
  <%= text_field_tag :user_name, nil, class:"typeahead app-view-typeahead convo-typeahead", value: "", placeholder: "Pick a User to Message" %>

  <%= hidden_field_tag "conversation[site_id]", site.id %>
  <%= hidden_field_tag :user_id, nil %>
  <%= hidden_field_tag :token, token %>

  <% conversation.user_ids.each do |user_id| %>
    <%= hidden_field_tag "user_ids[]", user_id %>
  <% end %>

  <%= submit_tag "Add", class: "fa fa-plus add-btn" %>
<% end %>