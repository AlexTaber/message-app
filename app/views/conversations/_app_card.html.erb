<%= link_to home_path(tasks: @tasks, user_ids: conversation.user_ids, site_id: site.id) do%>
  <% if conversation == current_conversation %>
    <div class="message-item msg-item-current">
  <% elsif conversation.has_unread_messages?(user) %>
    <div class="message-item is-unread-convo">
  <% else %>
    <div class="message-item">
  <% end %>
    <div class="media">
      <% if conversation.messages.last.user.image %>
        <div class="profile-pic u-pull-left app-view-p-img">
          <img class="profile-pic" src="<%= conversation.messages.last.user.image_url %>">
        </div>
      <% else %>
        <div class="profile-pic has-no-pic u-pull-left app-view-p-img">
          <p><%= conversation.messages.last.user.first_name[0] %></p>
        </div>
      <% end %>
      <div class="bd">
        <h4>
          <%= conversation.abbreviated_other_users_to_s(user, 20) %>
        </h4>
        <p>
          <%= sanitize(simple_format(conversation.content_preview(30)), :tags => %w(br a)) %>
        </p>
        <% if conversation.has_pending_tasks? || conversation.has_completed_tasks? %>
        <p>
          <small>
            <% if conversation.has_pending_tasks? %>
              <%= conversation.pending_tasks.count %> Pending Tasks
            <% end %> 
            <% if conversation.has_completed_tasks? && conversation.has_pending_tasks? %> 
             | 
            <% end %>
            <% if conversation.has_completed_tasks? %>
              <%= conversation.completed_tasks.count %> Completed Tasks
            <% end %>
          </small>
        </p>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
