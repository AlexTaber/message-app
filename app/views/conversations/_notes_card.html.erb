<%= link_to home_path(notes: true, tasks: @tasks, user_ids: current_user.id, project_id: conversation.project.id) do %>
  <div class="message-item note-item">

    <i class="fa fa-edit"></i>

    <div class="bd conversation-preview">
      <h4 class="ellipsis">
        Your Notes for <%= conversation.project.name %>
      </h4>
      <p id="tally<%= conversation.id %>">
        <small>
          <% if conversation.has_completed_tasks? || conversation.has_pending_tasks? %>
            <% if conversation.has_pending_tasks? %>
              <span class="color-red"><%= conversation.pending_tasks.count %> Pending Tasks</span>
            <% end %>
            <% if conversation.has_complete_and_incomplete_tasks? %>
             |
            <% end %>
            <% if conversation.has_completed_tasks? %>
              <span class="color-green"><%= conversation.completed_tasks.count %> Completed Tasks</span>
            <% end %>
          <% else %>
            0 Tasks
          <% end %>
        </small>
      </p>
    </div>
  </div>
<% end %>
