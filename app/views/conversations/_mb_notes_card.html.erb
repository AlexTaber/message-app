<% if conversation.has_unread_messages?(user) %>
  <div class="msg-bx-convo-item is-unread-mb-convo">
<% else %>
  <div class="msg-bx-convo-item">
<% end %>
  <%= link_to message_box_path(notes: true, tasks: @tasks, user_ids: current_user.id, token: project.token) do %>
    <% if conversation.has_messages? %>
      <i><%= conversation.messages.last.date_to_s %></i>
      <i><%= conversation.messages.last.time_to_s %></i>
      <div class="msg-bx-convo-data">
        <h4>Your Notes for <%= project.name %></h4>
        <%= "#{sanitize(simple_format(conversation.content_preview(30)), :tags => %w(br a))}" %>
      </div>
    <% else %>
      <div class="msg-bx-convo-data">
        <i>Notes</i>
        <h4>Your Notes for <%= project.name %></h4>
        Write notes for <%= project.name %> here
      </div>
    <% end %>
  <% end %>
</div>