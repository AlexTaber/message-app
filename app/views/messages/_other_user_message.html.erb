<div class="them-msg-wrapper">

<% if message.user.image %>
  <img class="profile-pic" src="<%= message.user.image_url %>">
<% else %>
  <div class="profile-pic has-no-pic"><div class="table-cell"><%= message.user.first_name[0] %></div></div>
<% end %>
<small class="u-full-width them-meta-data"><b><%= message.user.first_name_last_initial %></b> <i>on <%= message.date_to_s %> <%= message.time_to_s %></i></small>
  <p>
    <%= sanitize(simple_format(message.auto_linked_content.gsub(/(?:\n\r?|\r\n?)/, '<br> <a>')), :tags => %w(br a)) %>
  </p>
</div>