<%= render partial: 'layouts/header', locals: { transitioned: true } %>
<div class="form-background gradient-background login-page">
  <div class="display-table form-page text-center">
    <div class="text-center centered">
    <div class="form_header">
      <h2 class="form_title">Sign in to start messaging with Evia</h2>
    </div>
    <%= form_tag '/login', id: "sign-in-form" do %>
      <div class="form_first-row">
        <label for="email"><span>Email:</span><br>
        <%= email_field_tag :email, @email %></label><br>
      </div>
      <div class="form_third-row">
      <label for="password"><span>Password:</span><br>
        <%= password_field_tag :password, nil%></label><br><br>
        <%= submit_tag "Sign In" , :class => 'button button-primary' %><br><br>
      </div>
    <% end %>
        <div class="login_footer">
          <p>
            DON'T HAVE AN ACCOUNT?
            <%= link_to "SIGN UP", new_user_path %>
          </p>
          <p>
            <%= link_to "Forgot your password?", new_password_recovery_path %>
          </p>
        </div>
    </div>
  </div>
</div>