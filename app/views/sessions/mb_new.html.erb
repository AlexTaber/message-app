<div id="msg-bx" class="mb-form">
<header class="brand-color">
    <p>
      <span>Please Log In</span>
    </p>
</header>

<div class="msg-bx-body">
<h4 class="text-center">
Sign in to start messaging with Mercury
</h4>
	<%= form_tag '/login' do %>
		<%= hidden_field_tag :token, @token %>
	  <%= text_field_tag :email, nil, placeholder: "Email" %> <br>
	  <%= password_field_tag :password, nil, placeholder: "Password" %> <br> <br>
	  <%= submit_tag "Sign In", :class => 'button button-primary' %> <br><br>
	  <p>
	    DON'T HAVE AN ACCOUNT?
	    <%= link_to "SIGN UP", new_user_path %>
	  </p>
	<% end %>
	</div>
	</div>