<div id="msg-bx" class="mb-form">
<header class="mb-header">
    <p>
      <span>Please Log In</span>
    </p>
</header>

<div class="mb-body">
<h4 class="text-center">
Sign in to start messaging with Evia
</h4>
	<%= form_tag '/login' do %>
		<%= hidden_field_tag :mb, true %>
	  <%= text_field_tag :email, nil, placeholder: "Email" %> <br>
	  <%= password_field_tag :password, nil, placeholder: "Password" %> <p>&nbsp;</p>
	  <%= submit_tag "Sign In", :class => 'button button-primary' %> <br><br>
	  <p>
	    DON'T HAVE AN ACCOUNT?
	    <%= link_to "SIGN UP", new_user_path, target: '_blank' %>
	  </p>
	<% end %>
</div>